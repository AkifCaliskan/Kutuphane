@{

    Layout = "_adminLayout";
}


@model IEnumerable<Kutuphane.WebUI.Models.Operations.BookTrackingModel>;
<html>
<head>
    <style>
        h2 {
            text-align: center;
            color: tomato;
        }

        button {
            margin-left: 600px;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <br />
    <h2 style="color:tomato">Kitap Takip</h2>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <div class="content">
        <div class="container mt-5">
            <table id="example" class="table table-striped" style="width:100%">


                <thead>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Kullanıcı Adı</th>
                        <th>Veriliş Tarihi</th>
                        <th>Alış Tarihi</th>
                        <th>Teslim Edenler</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>@item.BookName</td>
                            <td>@item.UserName</td>
                            <td>@item.İssueDate</td>
                            <td>
                                @if (!@item.IsReturnTime.Contains("1.01.0001 00:00:00"))
                                {
                                    @item.ReturnTime
                                }
                                else
                                {
                                    @(string.Empty);
                                }
                            </td>
                            <td>


                                @if (!@item.IsReturnTime.Contains("1.01.0001 00:00:00") && @item.ReturnTime <= DateTime.Now)
                                {
                                    <i class="fa fa-check text-center"></i>
                                }
                                else
                                {
                                    <i class="fa fa-remove"></i>
                                }

                            </td>

                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                        İşlemler
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Edit", "BookTracking" , new {  id = @item.OperationsID })">Düzenle</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Delete", "BookTracking" , new {  id = @item.OperationsID })" onclick="return confirm('Silmek İstediğinize Emin Misiniz?');">Sil</a></li>

                                    </ul>
                                </div>
                            </td>
                        </tr>

                    }
                    <a class="btn btn-primary" href="/BookTracking/Give" style="margin-left:1176px; width:120px;">Yeni Kayıt</a>

                </tbody>

            </table>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>