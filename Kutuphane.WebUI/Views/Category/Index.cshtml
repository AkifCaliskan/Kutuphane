@{

    Layout = "_adminLayout";
}

@using Kutuphane.Entities.Concrete
@using Kutuphane.WebUI.Models.Category
@model IEnumerable<CategoryListModel>;
<html>
<head>
    <style>
        h2 {
            text-align: center;
        }

        button {
            margin-left: 600px;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <br />
    <h2 style="color:tomato">Kategori Listesi</h2>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <div class="content">
        <div class="container mt-5">
            <table id="example" class="table table-striped" style="width:100%">


                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th style="text-align:right">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.CategoryName</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                        İşlemler
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Edit", "Category" , new {  id = @item.CategoryID })">Düzenle</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Delete", "Category" , new {  id = @item.CategoryID })" onclick="return confirm('Silmek İstediğinize Emin Misiniz?');">Sil</a></li>

                                    </ul>
                                </div>
                            </td>
                        </tr>

                    }
                    <a class="btn btn-primary" href="/Category/Add" style="margin-left:1201px;">Kategori Ekle</a>
                </tbody>
            </table>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>