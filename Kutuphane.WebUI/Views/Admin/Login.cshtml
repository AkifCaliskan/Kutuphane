

@using Kutuphane.WebUI.Models.Login;
@model LoginViewModel
<html>
<head>
   

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    @*<link href="~/css/Font-Awesome/font-awesome.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/css/ImagePreview.css" rel="stylesheet" />
    <link href="~/css/Multiselect.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/SideBar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.css" />
</head>
<body>

    <div class="content">
        <div class="container mt-5">
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
            {
                <input class="form-control" asp-for="Kullanıcı Adı" name="login" placeholder="Login" runat="server" style="text-align: center;" />
                <input class="form-control" asp-for="Şifre" name="password" placeholder="Password" runat="server" style="text-align: center;" type="password" />
                <input type="submit" value="Login" style="" class="btn btn-dark" />
              

            }

        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
